#include <iostream>

using namespace std;

int location_of_target(int arr[], int n, int tar);

int main()
{
    cout<<"Enter the number of elements for the array: "<< endl;
    
    int n, num;
    
    cin>>n;
    
    int arr[n];
    
    cout<<" Input elements of array: "<<endl;
    for (short i=0; i<n; i++) cin>>arr[i];
    
    cout<<"What number you want to find: "<<endl;
    cin>>num;
    
    cout<<"The location of your number is: "<< location_of_target(arr, n, num);
    
    return 0;
    
    }
    
int location_of_target(int arr[], int n, int tar){
   
     int pos, i, sentinel;
       sentinel = -1;
    
    pos = sentinel;
    
    for (i=0; i<n; i++){
        
        if (arr[i] == tar) { pos = i;}
        
        }
        
        return pos;
    
    }
    
    
